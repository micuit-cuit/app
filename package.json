{
  "name": "termihub",
  "version": "1.0.0-b2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.liveweeeb.termihub",
    "productName": "TermiHub 1.0.0-b2",
    "files": [
      "node_modules/**/*",
      "src/**/*",
      "command/**/*",
      "index.html",
      "logo.png",
      "logo.svg",
      "main.js",
      "package-lock.json",
      "package.json",
      "renderer.js",
      "styles.css"
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "category": "Utility",
      "icon": "logo.png"
    }
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "ping": "^0.4.4",
    "traceroute": "^1.0.0"
  }
}
